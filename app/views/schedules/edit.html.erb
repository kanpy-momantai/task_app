<h3>スケジュール編集</h3>

<%= form_for @schedule do |f| %>
<table>
    <tr>
            <th><%= f.label :title,"タイトル"%></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start,"開始日"%></th>
            <td><%= f.text_field :start %></td>
        </tr>
        <tr>
            <th><%= f.label :end,"終了日"%></th>
            <td><%= f.text_field :end %></td>
        </tr>
        <tr>
            <th><%= f.label :allday,"終日"%></th>
            <td><%= f.check_box :allday %></br>
                終日の場合はチェックを入れます</td>
        </tr>
        <tr>
            <th><%= f.label :memo,"スケジュールメモ"%></th>
            <td><%= f.text_field :memo %></td>
        </tr>
</table>

<div>
     <ul class ="choice">
       <li><%= f.submit "編集を完了する" %></li>
       <li><%= link_to "スケジュール情報一覧に戻る", :schedules,class:"link" %></li>
     </ul>
</div>

<footer>
    <h1>現在の日時:<%= Time.now.strftime("%Y年%m月%d日") %></h1>
</footer>

<% end %>